@using System.Linq
@model Hurtownia.Models.ViewModels.ProductsViewModel

@{
    ViewBag.Title = "Lista produktów";
}
<br/>
<h2>List</h2>

@{Html.RenderPartial("FilterProduct",Model);}
<br/>
<br/>
<fieldset>
    <legend>ProductsViewModel</legend>
    <table class="customTable">
        <tr>
            <th>
 
                   @Html.DisplayNameFor(model => model.Products.FirstOrDefault().Name)
            </th>
            <th>
                    @Html.DisplayNameFor(model => model.Products.FirstOrDefault().ExpiryDate)
            </th>
            <th>
                    @Html.DisplayNameFor(model => model.Products.FirstOrDefault().Price)
            </th>
            <th>
                    @Html.DisplayNameFor(model => model.Products.FirstOrDefault().Amount)
            </th>
            <th>
                    @Html.DisplayNameFor(model => model.Products.FirstOrDefault().ProductType.Name)
            </th>
            <th>
                    @Html.DisplayNameFor(model => model.Products.FirstOrDefault().Unit.Name)
            </th>
            <th colspan="2"></th>
        </tr>
        @{
            foreach (var product in Model.Products)
            {
                Html.RenderPartial("ProductRow", product);
            }
        }
</table>
</fieldset>
